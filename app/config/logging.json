{
    "version": 1,
    "formatters": {
      "standard": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "standard",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "standard",
        "filename": "logs/app.log",
        "maxBytes": 10485760,
        "backupCount": 5,
        "encoding": "utf8"
      }
    },
    "loggers": {
      "my_project": {
        "level": "DEBUG",
        "handlers": ["console", "file"],
        "propagate": false
      }
    },
    "root": {
      "level": "DEBUG",
      "handlers": ["console"]
    }
  }